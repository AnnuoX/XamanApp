{
  "name": "xumm",
  "version": "0.5.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "bundle:android": "node ./node_modules/react-native/local-cli/cli.js bundle --platform android --dev false --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --assets-dest android/app/src/main/res",
    "bundle:ios": "node ./node_modules/react-native/local-cli/cli.js bundle --platform ios --entry-file index.js --bundle-output ios/XUMM/main.jsbundle --dev=false --verbose",
    "build:e2e:ios": "detox build --configuration ios.sim.release",
    "build:e2e:android": "detox build --configuration android.emu.release",
    "release:android": "cd android && ./gradlew assembleRelease",
    "release:ios": "cd ios && xcodebuild -scheme XUMM archivexcodebuild -scheme XUMM archive",
    "run:ios": "react-native run-ios",
    "run:android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "prettier": "prettier --write `find -E src -regex \".*.(ts|tsx)\"`",
    "test:ts": "tsc --noEmit --pretty",
    "test:e2e:ios": "detox build -c ios.sim.release && detox test -c ios.sim.release ",
    "test:e2e:android": "detox build -c android.emu.release && detox test -c android.emu.release",
    "test:lint": "eslint --ext .tsx,.ts src/",
    "test:unit": "jest",
    "test": "npm run test:ts && npm run test:lint && npm run test:unit",
    "clean": "./scripts/clean.sh",
    "postinstall": "./scripts/post-install.sh",
    "update-snapshots": "npm run test:unit -- -u",
    "storybook": "start-storybook -p 7007",
    "prestorybook": "rnstl"
  },
  "dependencies": {
    "@react-native-community/blur": "^3.6.0",
    "@react-native-community/netinfo": "^5.9.2",
    "bignumber.js": "^9.0.0",
    "fuse.js": "^6.0.1",
    "i18n-js": "^3.7.0",
    "lodash": "^4.17.15",
    "moment": "^2.26.0",
    "node-libs-browser": "^2.2.1",
    "react": "16.11.0",
    "react-native": "0.62.2",
    "react-native-camera": "^3.26.0",
    "react-native-device-info": "^5.6.1",
    "react-native-fingerprint-scanner": "^5.0.0",
    "react-native-firebase": "^5.6.0",
    "react-native-interactable": "2.0.1",
    "react-native-keychain": "^4.0.5",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-navigation": "6.7.2",
    "react-native-webview": "^10.2.3",
    "realm": "^3.6.5",
    "ripple-binary-codec": "^0.2.6",
    "rippled-ws-client": "^1.6.0",
    "uuid": "^8.1.0",
    "xrpl-accountlib": "0.3.6",
    "xrpl-tagged-address-codec": "^0.2.1",
    "xumm-string-decode": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/runtime": "^7.9.2",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-ondevice-actions": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/react-native": "^5.3.19",
    "@storybook/react-native-server": "^5.3.19",
    "@types/detox": "^16.4.1",
    "@types/enzyme": "^3.10.5",
    "@types/i18n-js": "^3.0.3",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.154",
    "@types/react": "^16.9.35",
    "@types/react-native": "^0.62.12",
    "@types/react-test-renderer": "^16.9.2",
    "@types/uuid": "^8.0.0",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "babel-jest": "^25.5.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-rewrite-require": "^1.14.5",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "coveralls": "^3.1.0",
    "detox": "16.7.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.5.0",
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-native": "^3.8.1",
    "eslint-plugin-spellcheck": "^0.0.17",
    "eslint-plugin-typescript": "^0.14.0",
    "fetch-mock": "^9.10.1",
    "jest": "^25.5.3",
    "metro-react-native-babel-preset": "^0.59.0",
    "mocha": "^7.2.0",
    "patch-package": "^6.2.2",
    "prettier": "^2.0.5",
    "react-dom": "16.11.0",
    "react-native-storybook-loader": "^1.8.1",
    "react-test-renderer": "16.11.0",
    "ts-jest": "^25.5.1",
    "typescript": "3.9.3"
  },
  "detox": {
    "test-runner": "mocha",
    "runner-config": "e2e/mocha.opts",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/XUMM.app",
        "build": "xcodebuild -workspace ios/XUMM.xcworkspace -scheme XUMM -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 11 Pro Max"
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/XUMM.app",
        "build": "xcodebuild -workspace ios/XUMM.xcworkspace -scheme XUMM -configuration Release -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 11 Pro Max"
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew app:assembleDebug app:assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_28"
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew app:assembleRelease app:assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "name": "Nexus_5X_API_28"
      }
    }
  },
  "config": {
    "react-native-storybook-loader": {
      "searchDir": [
        "./src/components"
      ],
      "pattern": "**/*.stories.tsx",
      "outputFile": "./storybook/storyLoader.js"
    }
  }
}
